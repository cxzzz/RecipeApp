<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="20dp"
    android:paddingRight="20dp">

    <ImageView
        android:id="@+id/recipeImage"
        android:layout_width="match_parent"
        android:layout_height="150sp"
        android:layout_marginTop="20dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_gravity="center_horizontal" />

    <TextView
        android:textColor="@color/colorPrimary"
        android:id="@+id/recipeName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/recipeImage"
        android:text="Recipe Name"
        android:textSize="24dp"
        android:textAlignment="center"/>


    <TextView
        android:textColor="@color/colorPrimary"
        android:id="@+id/urlStatic"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/recipeName"
        android:text="Recipe URL"
        android:textAlignment="viewStart"
        android:textSize="18dp" />

    <TextView
        android:id="@+id/url"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/urlStatic"
        android:text="URL"
        android:textAlignment="viewStart"
        android:textSize="12dp" />


    <TextView
        android:id="@+id/caloriesStatic"
        android:textColor="@color/colorPrimary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/url"
        android:layout_alignParentStart="true"
        android:text="Calories"
        android:layout_marginTop="10dp"
        android:textAlignment="viewStart"
        android:textSize="18dp" />

    <TextView
        android:id="@+id/calories"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:text="Calories"
        android:textAlignment="viewStart"
        android:layout_below="@+id/caloriesStatic"
        android:textSize="12dp" />

    <TextView
        android:id="@+id/ingredientsStatic"
        android:textColor="@color/colorPrimary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_marginTop="10dp"
        android:layout_below="@id/calories"
        android:text="Ingredients"
        android:textAlignment="viewStart"
        android:textSize="18dp" />

    <TextView
        android:id="@+id/ingredients"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ingredientsStatic"
        android:layout_alignParentStart="true"
        android:text="Ingredients"
        android:textAlignment="viewStart"
        android:textSize="12dp" />

    <TextView
        android:id="@+id/weightStatic"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/ingredients"
        android:layout_marginTop="10dp"
        android:text="Serving Size"
        android:textAlignment="viewStart"
        android:textColor="@color/colorPrimary"
        android:textSize="18dp" />

    <TextView
        android:id="@+id/weight"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/weightStatic"
        android:text="Serving Size"
        android:textAlignment="viewStart"
        android:textSize="12dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="25dp"
        android:text="back"
        android:id="@+id/back"/>

</RelativeLayout>